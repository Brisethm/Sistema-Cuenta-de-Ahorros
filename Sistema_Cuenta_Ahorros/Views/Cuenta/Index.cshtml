@{
    Layout = null;
}

@model Sistema_Cuenta_Ahorros.Models.Cuenta

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Cuenta de Ahorros</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg p-4" style="width: 420px; border-radius: 15px;">

            <h3 class="text-center mb-3 text-primary">💳 Cuenta de Ahorros</h3>

            <div class="alert alert-info text-center fw-bold">
                Saldo actual: $@Model.Saldo
            </div>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-success text-center">
                    @ViewBag.Mensaje
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <hr />

            <!-- Depositar -->
            <h5 class="text-success">➕ Depositar</h5>
            <form asp-action="Depositar" method="post" class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" step="0.01" name="monto" class="form-control" placeholder="Monto a depositar" required />
                </div>
                <button type="submit" class="btn btn-success w-100 mt-2">
                    Depositar
                </button>
            </form>

            <hr />

            <!-- Retirar -->
            <h5 class="text-danger">➖ Retirar</h5>
            <form asp-action="Retirar" method="post">
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" step="0.01" name="monto" class="form-control" placeholder="Monto a retirar" required />
                </div>
                <button type="submit" class="btn btn-danger w-100 mt-2">
                    Retirar
                </button>
            </form>

        </div>
    </div>

</body>
</html>
